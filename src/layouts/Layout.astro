---
import Header from "../components/Header.astro";
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";

import "@/styles/tailwind.css";
import "@/styles/post.css";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags {...headTags} />
  <body
    class="min-h-screen bg-gradient-to-br from-moon-love via-moon-gold to-moon-foam bg-moon-rose"
  >
  <div class="dark:bg-moon-base/90 bg-dawn-base/90 text-dawn-text dark:text-moon-text h-full min-h-screen flex justify-center py-16">
    <div class="max-w-4xl w-full">
    <Header />
      <article class="p-5">
    <slot /></article>
    <style is:global>
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,700;1,400;1,700&family=JetBrains+Mono&family=Rubik:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
  </body>
</html>
